<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1513829596324-4bb2800c5efb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80);">
  <div class="banner_container">
    <h1>Discover unknown artist</h1>
  </div>
  <a href="#card_container" class="scroll">
    <p>Discover</p>
    <i class="fas fa-angle-down"></i>
  </a>


</div>



<div class="container_home">
  <div id="card_container">
    <% @albums.each do |album| %>
      <%= link_to album_path(album) do %>
        <div class="card-image" style="background-image: url('<%= album.picture %>')">
          <div class="rating">
              <% if album.rating == 1 %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
            <% elsif album.rating == 2 %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
            <% elsif album.rating == 3 %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
            <% elsif album.rating == 4 %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "emptystar.png", height: '20' %>
            <% else %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
              <%= image_tag "star.png", height: '20' %>
            <% end %>
          </div>

        </div>

      <% end %>
    <% end %>
  </div>
  <h2>Trending Channels:</h2>
  <div id="card_container2">
    <% @channels.each do |channel| %>
      <%= link_to channel_path(channel) do %>
        <div class="card-image" style="background-image: url('<%= channel.picture %>')">
          <p><%= channel.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

